/* pages/article/visit.wxss */

page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.box-head {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 50%;
  border: #dcdcdc 1px solid;
  width: 90%;
  margin: 0 auto;
}

.box-list {
  width: 80%;
  display: flex;
  flex-direction: column;
  height: 40%;
  margin: 0 auto;
}

.box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  border-bottom: #dcdcdc 0.5px solid;
  height: 20%;
}

.image-icon {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 10%;
}

.image-icon image {
  max-width: 20px;
  max-height: 20px;
}

.box-item {
  display: flex;
  justify-content: space-between;
  text-align: left;
  width: 80%;
}

.box-qt {
  text-align: right;
  width: 10%;
}

.save-btn {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  height: 10%;
  max-height: 40px;
  width: 100%;
  background: #00abff;
  justify-content: center;
  border-top: #dcdcdc 1px solid;
  text-align: center;
  align-items: center;
  color: #fff;
}
