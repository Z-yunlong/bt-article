/* pages/article/save.wxss */

.art-head {
  display: flex;
  color: black;
  background: #dcdcdc;
  height: 30%;
}
.art-head label{
  padding: 10px;
  color:darkslategray;
  font-size:large;
}
.art-body {
  /* position: absolute; */
  display: flex;
  /* background: red; */
  flex-direction: column;
  align-items: center;
  height: 70%;
  /* overflow: auto; */
}

.art-add {
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* background: rebeccapurple; */
  padding: 10rpx;
  min-width: 60rpx;
  min-height: 60rpx;
}

.art-add image {
  width: 60rpx;
  height: 60rpx;
}

.art-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  /* background: blue; */
  border: 2px;
  box-sizing: border-box;
  box-shadow: 1px 1px 1px #dcdcdc;
  border-radius: 5px;
  height: 100px;
  width: 95%;
  min-height: 110px;
  padding: 5px;
}

.art-delete {
  height: 100px;
  width: 10%;
  /* background: brown; */
}

.art-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background: #dcdcdc;
  height: 100px;
  min-width: 100px;
  /* border-radius: 5px; */
  border: 2px;
}

.art-image image {
  height: 100px;
  width: 100px;
  border-radius: 5px;
}

.art-text {
  padding-left: 10rpx;
  height: 100px;
  padding-top: 0rpx;
  padding-bottom: 0rpx;
  overflow: hidden;
  border-radius: 5px;
  /* background: yellow; */
}

.art-text text {
  width: 100%;
}

.art-position {
  display: flex;
  flex-direction: column;
  width: 10%;
  height: 100%;
  align-items: flex-end;
  justify-content: space-between;
  /* background: rebeccapurple; */
}

.art-bottom {
  display: flex;
  flex-direction: row;
  width: 100%;
  position: fixed;
  /* background: blue; */
  height: 7%;
  bottom: 0;
  border-radius: 0px;
}

.btn {
  border-radius: 0px;
  width: 100%;
}

.btn-default-left {
  border-right: #fff 1rpx solid;
  background-color: #00abff;
  color: #fff;
}

.btn-default-right {
  border-left: #fff 1rpx solid;
  background-color: #00abff;
  color: #fff;
}

button::after {
  border: none;
}
